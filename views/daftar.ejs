<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login-style.css">
    <title>Login Apps</title>
</head>
<body>
    <main>
        <header>
            <div class="logo-container">
                <div class="logo">FILM<span>TIME</span></div>
            </div>
        </header>
        <form id="loginForm" class="login-input" action="/register" method="POST">
            <label for="inputUsername">Username</label>
            <input id="inputUsername" name="username" type="text" required>
            <label for="inputPassword">Password</label>
            <input id="inputPassword" name="password" type="password" required>
            <button id="buttonLogin" type="submit">Daftar</button>
            <button id="buttonClose" type="button" onclick="window.location.href='/login'">Back</button>
        </form>
    </main>

    <% if (typeof error !== 'undefined') { %>
        <div class="error-notification">
            <p><%= error %></p>
        </div>
    <% } %>

</body>
</html>
