<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login-style.css">
    <title>Login Apps</title>
</head>
<body>
<main>
    <header>
        <img class="logo" src="images/logo1.png" alt="Logo">
    </header>
    <form action="/login" method="POST" id="loginForm" class="login-input">
        <label for="inputUsername">Username</label>
        <input id="inputUsername" type="text" name="username" required>
        <label for="inputPassword">Password</label>
        <input id="inputPassword" type="password" name="password" required>
        <a href="/daftar">daftar</a>
        <button type="submit">Login</button>
        <button id="buttonClose" onclick="window.location.href='/'">Close</button>
    </form>
    
</main>

<% if (typeof error !== 'undefined') { %>
    <div class="error-notification">
        <p><%= error %></p>
    </div>
<% } %>


</body>
</html>
